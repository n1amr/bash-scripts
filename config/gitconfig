[credential]
    helper = cache

[commit]
    gpgsign = false
    verbose = true

[push]
    default = matching

[url "git@github.com:"]
    insteadOf = "github:"

[url "git://gist.github.com/"]
    insteadOf = "gist:"

[url "git@gitlab.com:"]
    insteadOf = "gitlab:"

[gitflow "branch"]
    master = master
    develop = develop

[gitflow "prefix"]
    bugfix = bugfix/
    feature = feature/
    hotfix = hotfix/
    release = release/
    support = support/
    versiontag = ""
