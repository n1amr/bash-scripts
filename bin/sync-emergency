#!/bin/bash

set -e

includes="$DOTFILES_HOME/config/sync.rc/emergency"
excludes="$DOTFILES_HOME/config/sync.rc/emergency-excludes"
destination='/mnt/Storage/Backups/emergency'

while IFS= read -r line; do
    echo $line
    rsync -avzbk --progress --delete --relative --exclude-from="$excludes" "$line" "$destination"
done < "$includes"
