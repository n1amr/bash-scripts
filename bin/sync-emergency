#!/bin/bash

includes="$DOTFILES_HOME/config/sync.rc/emergency"
destination='/mnt/Storage/Backups/emergency'

while IFS= read -r line; do
    echo $line
    rsync -avbk --progress --delete --relative --backup-dir="$destination/trash" --exclude-from="$DOTFILES_HOME/config/sync.rc/emergency-excludes" "$line" "$destination"
done < "$includes"
