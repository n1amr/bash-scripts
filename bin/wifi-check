#!/bin/bash

wifi_list=(
    Vodafone_ADSL_DC53
#    TEData
#    DLINK_WIRELESS
#    Alaa
#    linksys
#    3com
)

state() {
    nmcli d | grep wlp8s0 | grep -Po '\S*connected'
}

for id in "${wifi_list[@]}"; do
    if [[ x"$(state)" == x"connected" ]]; then
        break
    fi
    echo "connecting to $id..."
    timeout 5s nmcli connection up id "$id"
done
