#!/bin/bash

set -e

if [[ "$TMUX" == "" ]]; then
    echo "Not in tmux"
    exit 1
fi

SERVERNAME_PREFIX="$(echo "tmux-$(tmux display-message -p '#S')" | tr 'a-z ' 'A-Z_')"
TMUX_LIST_FORMAT='#{window_active} #{window_id} #{pane_id}'

tmux_windows () {
    tmux list-windows -F "$TMUX_LIST_FORMAT"
}

switch_pane () {
    window_id="$(tmux showenv | grep -Po '(?<=VIM_SERVER_WINDOW_ID=)(.*)')"
    tmux select-window -t "$window_id"

    pane_id="$(tmux showenv | grep -Po '(?<=VIM_SERVER_PANE_ID=)(.*)')"
    tmux select-pane -t "$pane_id"
}

save_vim_pane_info () {
    tmux setenv VIM_SERVER_NAME "$servername"

    window_id="$(tmux_windows | grep '^1' | grep -Po '@\d+')"
    tmux setenv VIM_SERVER_WINDOW_ID "$window_id"

    pane_id="$(tmux_windows | grep '^1' | grep -Po '%\d+')"
    tmux setenv VIM_SERVER_PANE_ID "$pane_id"
}

is_server_running () {
    local servername
    servername="$1"
    vim --serverlist | grep -qi "^$servername\$"
}

# Retrieve old server name or create a random one if empty or not running
set +e
servername="$(tmux showenv | grep -Po '(?<=VIM_SERVER_NAME=)(.*)')"
if [ -z "$servername" ] || ! is_server_running "$servername"; then
    random_id="$(cat /dev/urandom | tr -dc '0-9' | fold -w 256 | head -n 1 | head --bytes 6)"
    servername="$SERVERNAME_PREFIX-$random_id"
fi
set -e

if test -t 0; then
    # stdin is a terminal.
    if is_server_running "$servername"; then
        if [[ $# -gt 0 ]]; then
            vim --servername "$servername" --remote "$@"
            switch_pane
        else
            echo "Another instance is running in current session"
            switch_pane
            exit 1
        fi
    else
        save_vim_pane_info
        vim --servername "$servername" "$@"
    fi
else
    # If piped write to a temp file
    TMPDIR="${TMPDIR:-/tmp}" # default to /tmp if TMPDIR isn't set
    tmpfile="$(mktemp "$TMPDIR/vim-XXXXXXXX")"

    if is_server_running "$servername"; then
        cat > "$tmpfile"
        vim --servername "$servername" "$@" --remote "$tmpfile"
        switch_pane
    else
        save_vim_pane_info
        vim --servername "$servername" "$@" -c "silent! w! $tmpfile" -
    fi
fi
