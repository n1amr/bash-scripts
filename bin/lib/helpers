#!/bin/bash

[ -n "$DOTFILES_HELPERS" ] && return || export DOTFILES_HELPERS=true

source "$DOTFILES_HOME/bin/lib/log"

safe_link() {
    local from="$(echo "$1" | sed 's/\(.\)\/*$/\1/g')" # right strip slashes
    local to="$2"

    if [ -e "$from" ] && [ "$(readlink "$from")" = "$to" ]; then
        echo "Up to date: $from -> $to"
        return
    fi

    local response
    if [ "$interactive" = 'true' ]; then
        printf "Link %s -> %s ? ([y]/n) " "$from" "$to"
        read -r response
    else
        response='y'
    fi

    if [ "$response" != 'n' ]; then
        if [ -e "$from" ]; then
            mv -v "$from" "${from}.bak.$(date --utc +"%Y%m%d%H%M%S")"
        fi

        local dir="$(dirname "$from")"
        if [ ! -d "$dir" ]; then
            mkdir -pv "$dir"
        fi

        ln -sfv "$to" "$from"
    fi
}
