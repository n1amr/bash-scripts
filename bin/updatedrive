#!/bin/bash

set -e

source ~/.dotfiles_config
if [ -z "$DOTFILES_CONFIG_GOOGLE_DRIVE_ROOT" ]; then
    echo -n 'Enter Google Drive home directory path: '
    read -r DOTFILES_CONFIG_GOOGLE_DRIVE_ROOT
    echo "export DOTFILES_CONFIG_GOOGLE_DRIVE_ROOT='$DOTFILES_CONFIG_GOOGLE_DRIVE_ROOT'" >> ~/.dotfiles_config
fi

GOPATH="$MY_HOME/.gopath"
PATH="$GOPATH/bin:$PATH"

DRIVE_PATH="$DOTFILES_CONFIG_GOOGLE_DRIVE_ROOT"

current_month_dir=$(date +'%Y/%m')
last_month_dir=$(date --date="-1 month" +'%Y/%m')
# last_month_dir=$(date --date="$(date +%Y-%m-15) -1 month" +'%Y/%m')

auto_pull_dirs=(
    "ASU/CSE 2017 - 4th year"
    "ASU/CSE4"
    "Google Photos/${current_month_dir}"
    "Google Photos/${last_month_dir}"
)

auto_push_dirs=(
#    "ASU/study"
#    "Personal/Bookmarks"
)

echo -e "$(date)\n"

# Options init
no_prompt=false
exclude=true

# Set Options
while [[ $# != 0 ]]; do
    case "$1" in
        -p|--no-prompt)
            no_prompt=true
        ;;
        -f|--no-exclude)
            exclude=false
        ;;
        --drive-options=*)
            drive_options="${1#*=}"
        ;;
        *)
            echo "Error: Unknown argument \"$1\""
            exit 1
        ;;
    esac
    shift
done

# Set flags
COMMONFLAGS="$drive_options"
PUSHFLAGS=''

if [ "$no_prompt" == "true" ]; then
    COMMONFLAGS="$COMMONFLAGS --no-prompt"
fi

if [ "$exclude" == "true" ]; then
    COMMONFLAGS="$COMMONFLAGS --exclude-ops=delete"
fi

set +e

# Pull all
for f in "${auto_pull_dirs[@]}"; do
    cd "$DRIVE_PATH"
    echo -e "\nPulling \"$f\" ..."
    # shellcheck disable=SC2086
    drive pull --ignore-name-clashes --ignore-conflict $COMMONFLAGS "$f"

    if [ -d "$DRIVE_PATH/$f" ]; then
        cd "$DRIVE_PATH/$f"
        git status >/dev/null 2>&1 && git checkout master && git add . && git status && git commit -m "$(date)"
    fi
done

# Push all
for f in "${auto_push_dirs[@]}"; do
    cd "$DRIVE_PATH"
    echo -e "\nPushing \"$f\" ..."
    # shellcheck disable=SC2086
    drive push $COMMONFLAGS $PUSHFLAGS "$f"
done

exit 0
