#!/bin/bash

set -e

source ~/.dotfiles_config

TOKEN_FILE="$DOTFILES_HOME/custom/keys/github_token"

if [[ -x "$TOKEN_FILE" ]]; then
    source "$TOKEN_FILE"
else
    echo "Please enter a new private token. From https://github.com/settings/tokens"
    echo -n ">>> "
    read -r GITHUB_PRIVATE_TOKEN
    echo "export GITHUB_PRIVATE_TOKEN = ${GITHUB_PRIVATE_TOKEN}" > "${TOKEN_FILE}"
    chmod +x "$TOKEN_FILE"
fi

export GITHUB_TOKEN="$GITHUB_PRIVATE_TOKEN"
hub create "$@"
