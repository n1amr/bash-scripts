#!/bin/bash

urlencode() {
    # urlencode <string>
    local length="${#1}"
    for (( i = 0; i < length; i++ )); do
        local c="${1:i:1}"
        case $c in
            [a-zA-Z0-9.~_-/]) printf "$c" ;;
            *) printf '%%%02X' "'$c"
        esac
    done
}

echo '#EXTM3U'
for f in "$@"; do
    path="$(realpath "$f")"
    title="$(basename "$path" | tr -- '-,' '_')"
    echo "#EXTINF:,$title"
    echo "$path"
done
