#!/bin/bash

source ~/.dotfiles_config
if [ -z "$DOTFILES_CONFIG_GOOGLE_DRIVE_ROOT" ]; then
    echo -n 'Enter Google Drive home directory path: '
    read DOTFILES_CONFIG_GOOGLE_DRIVE_ROOT
    echo "export DOTFILES_CONFIG_GOOGLE_DRIVE_ROOT='$DOTFILES_CONFIG_GOOGLE_DRIVE_ROOT'" >> ~/.dotfiles_config
fi

if [ -z "$DOTFILES_CONFIG_KP_DATABASE_FILE_PATH" ]; then
    echo -n 'Enter Keepass kdbx file path (relative to Google drive path): '
    read DOTFILES_CONFIG_KP_DATABASE_FILE_PATH
    echo "export DOTFILES_CONFIG_KP_DATABASE_FILE_PATH='$DOTFILES_CONFIG_KP_DATABASE_FILE_PATH'" >> ~/.dotfiles_config
fi

GOPATH="$MY_HOME/.gopath"
PATH="$GOPATH/bin:$PATH"

DRIVE_PATH="$DOTFILES_CONFIG_GOOGLE_DRIVE_ROOT"
KP_DATABASE_FILE_PATH="$DOTFILES_CONFIG_KP_DATABASE_FILE_PATH"

method=null
OPTIONS=''

while [[ $# > 0 ]]; do
    case "$1" in
        push|pull)
            method="$1"
        ;;
        *)
            OPTIONS="$OPTIONS $1"
        ;;
    esac
    shift
done

cd "$DRIVE_PATH"

if [ $method == push -o $method == pull ]; then
    echo ${method}ing...
    drive ${method} $OPTIONS -exclude-ops=delete "$KP_DATABASE_FILE_PATH"
else
    echo 'Usage: kp <push|pull>'
fi

exit 0
